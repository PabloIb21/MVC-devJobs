<main class="contenedor">
    <form action="/vacantes/nueva" method="POST" class="default-form">
        <h3>Información General</h3>

        <div class="campo">
            <label for="titulo">Título</label>
            <input type="text" name="titulo" id="titulo" placeholder="Ej: React Developer" value="{{vacante.titulo}}" required>
        </div>>
        <div class="campo">
            <label for="empresa">Empresa</label>
            <input type="text" name="empresa" id="empresa" placeholder="Ej: Google" value="{{vacante.empresa}}" required>
        </div>
        <div class="campo">
            <label for="ubicacion">Ubicación</label>
            <input type="text" name="ubicacion" id="ubicacion" placeholder="Ej: México" value="{{vacante.ubicacion}}" required>
        </div>
        <div class="campo">
            <label for="salario">Salario (USD)</label>
            <input type="number" name="salario" id="salario" placeholder="Ej: $500 USD" value="{{vacante.salario}}" required>
        </div>
        <div class="campo">
            <label for="contrato">Contrato</label>
            <select name="contrato">
                {{#tipoContrato vacante.contrato}}
                    <option value="" disabled>-- Selecciona --</option>
                    <option value="Freelance">Freelance</option>
                    <option value="Tiempo Completo">Tiempo Completo</option>
                    <option value="Medio Tiempo">Medio Tiempo</option>
                    <option value="Por Proyecto">Por Proyecto</option>
                {{/tipoContrato}}
            </select>
        </div>

        <h3>Descripción del Puesto</h3>
        <div class="campo descripcion">
            <label for="descripcion">Descripción</label>
            <input id="x" type="hidden" value="{{{vacante.descripcion}}}" name="descripcion" />
            <trix-editor input="x"></trix-editor>
        </div> 

        <h3>Conocimientos</h3>

        <ul class="lista-conocimientos">
            {{#seleccionarSkills vacante.skills}}
            {{/seleccionarSkills}}
        </ul>

        <div class="campo centrar-horizontal">
            <input type="hidden" name="skills" id="skills" />
            <input type="submit" value="Guardar cambios" class="btn btn-azul">
        </div>
    </form>
</main>