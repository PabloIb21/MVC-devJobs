<main class="contenedor">
    <form action="/editar-perfil" method="POST" class="default-form" enctype="multipart/form-data">
        <div class="campo">
            <label for="nombre">Nombre</label>
            <input value={{ usuario.nombre }} type="text" name="nombre" id="nombre" placeholder="Tu Nombre">
        </div>
        <div class="campo">
            <label for="email">Email</label>
            <input value={{ usuario.email }} type="email" name="email" id="email" placeholder="Tu Email">
        </div>
        <div class="campo">
            <label for="password">Password</label>
            <input type="password" name="password" id="password" placeholder="Tu Password">
        </div>
        <div class="campo">
            <label for="imagen">Imagen</label>
            <input type="file" name="imagen" id="imagen">
            <img src="uploads/perfiles/{{ usuario.imagen }}" class="admin-perfil" alt="imagen perfil">
        </div>
        <div class="campo">
            <input type="submit" class="btn btn-azul" value="Guardar cambios">
        </div>
    </form> 
</main>